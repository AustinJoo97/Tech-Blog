<h1>{{post.post_title}}</h1>
<h4>{{post.post_text}}</h4>
<h6>Posted by {{post.user}} on {{format_date post.date_created}}</h6>
{{#each comments as |comment|}}
<div>
    <h5>{{comment.comment_text}}</h5>
    <h6>Posted by {{comment.user}} on {{format_date comment.date_created}}</h6>
</div>
{{/each}}
<div>
    {{#if logged_in}}
    <form id='addNewComment'>
        <input id="comment-input">
    </form>
    {{else}}
    <div>
        <h1>Please login to comment!</h1>
    </div>
    {{/if}}
</div>