<div class="row">
  <div class="col-md-6">
    <h1>My Dashboard</h1>
    <form class="form newPost">
        <div class="form-group">
          <input class="form-input" type="blogPost" style="height: 250px;" id="blogPost" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Post</button>
        </div>
    </form>
  </div>
  <div class="col-md-6" style="overflow: scroll; height: 600px;">
    {{#each allMyPosts as |myPost|}}
    <div class="row mb-4 project" style="border: 1px dashed red" id={{myPost.id}}>
      <div class="col-md-10">
        <h1>{{myPost.post_title}}</h1>
        <h5>{{myPost.post_text}}</h5>
        <p>Posted on {{format_date myPost.date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
